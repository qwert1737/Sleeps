<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_read_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.sleep.Readstudentactivity">

    <ImageView
        android:id="@+id/read_student_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/man"
        android:clickable="true"
        android:maxWidth="150px"
        android:maxHeight="150px"
        android:adjustViewBounds="true"
        />



    <TextView
        android:id="@+id/read_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/read_student_image"
        android:textSize="25dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/read_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_student_image"
        android:layout_marginTop="16dp"
        android:autoLink="phone"
        />


    <TextView
        android:id="@+id/read_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/read_student_image"
        android:layout_marginTop="16dp"
        android:autoLink="email"
        />

    <TextView
        android:id="@+id/read_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/read_phone"
        android:textSize="20dp"
        android:text="     day                              time"
        />

    <ListView
        android:id="@+id/read_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/read_list_view"
        android:clickable="true"
        android:layout_marginTop="10dp">
    </ListView>






</RelativeLayout>